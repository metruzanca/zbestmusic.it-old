{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "build",
    "allowJs": true,
    "lib": [
      "es6",
      "es7",
      "dom",
      "webworker",
      "es2017"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}